{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "deno.unstable",
      "deno.window"
    ],
    "allowJs": false,
    "declaration": true,
    "sourceMap": false,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true
  },
  "fmt": {
    "files": {
      "include": [
        "src/"
      ]
    }
  }
}